            GridLayout:            
                id: lista_pets
                cols: 5
                size_hint_y: None
                height: self.minimum_height
                padding: 10



<CustomButton@Button>:
    size_hint_y: None
    height: 50
    color: (1, 1, 1, 1)  # Texto branco
    background_color: (0, 0, 0, 0)  # Transparente
    canvas.before:
        Color:
            rgba: (1, 1, 1, 0.3)  # Fundo branco transparente
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
