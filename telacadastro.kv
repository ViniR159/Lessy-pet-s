        orientation: 'vertical'
        size_hint: (0.9, 0.6)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        TextInput:
            id: nome
            hint_text: 'Nome'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20] 

        TextInput:
            id: email
            hint_text: 'Email'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20] 

        TextInput:
            id: senha
            hint_text: 'Senha'
            password: True
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0)  
            size_hint_y: None
            height: '50dp'
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

        TextInput:
            id: quant
            hint_text: 'Quantidade de dogs'
            input_filter: 'int'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0)  
            size_hint_y: None
            height: '50dp'
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

        Button:
            text: 'Cadastrar'
            on_press: root.butao()
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0)  
            size_hint_y: None
            height: '50dp'
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

        Button:
            text: 'Já cadastrados'
            on_press: app.root.current = "Principal"
            color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0)  
            size_hint_y: None
            height: '50dp'
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]


