<gerenciador>:
    Login:
        name: "login"
    Client:
        name: "Client"
    Pet:
        name: "Pet"
    Principal:
        name: "Principal"
    PastaPets:
        name: "PastaPets"
<Login>:

    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        
        TextInput:
            id: nome
            hint_text: 'nome'

        TextInput:
            id: email
            hint_text: 'email'

        TextInput:
            id: senha
            hint_text: 'Senha'

        TextInput:
            id: quant
            hint_text: 'Quantidade de dogs'
            input_filter: 'int'
            
        Button:
            text: 'Cadastrar'
            on_press: root.butao()

        Button:
            text: 'já cadastrados'
            on_press: app.root.current = "Principal"

<Client>:
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'

        Label:
            id: label_status
            text: "Cadastro 1"

        TextInput:
            id: nome_pet
            hint_text: 'Nome do Pet'

        TextInput:
            id: Raca
            hint_text: 'Raça do Pet'

        TextInput:
            id: idade_pet
            hint_text: 'Idade do Pet'
            input_filter: 'int'

        Button:
            text: 'Cadastrar'
            on_press: root.cadastrar_pet()

<Pet>:
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        
        Label:
            id: nome_pet
            text: "Nome_pet"

        TextInput:
            id: pacote
            hint_text: 'é pacote'

        TextInput:
            id: Valor
            hint_text: 'Valor'

        TextInput:
            id: data
            hint_text: 'data'

        Button:
            text: 'Cadastrar'
            on_press: root.criar_dog()
        
<Principal>:
    BoxLayout:
        orientation: 'vertical' 
        ScrollView:
            GridLayout:
                id: lista_clients
                cols: 1
                size_hint_y: None
                height: self.minimum_height

<PastaPets>:
    BoxLayout:
        orientation: 'vertical' 
        ScrollView:
            GridLayout:
                id: lista_clients
                cols: 1
                size_hint_y: None
                height: self.minimum_height




