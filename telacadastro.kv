<gerenciador>:
    Login:
        name: "Login"
    Cadastro:
        name: "Cadastro"
    Client:
        name: "Client"
    Pet:
        name: "Pet"
    Principal:
        name: "Principal"
    PastaPets:
        name: "PastaPets"
    InfoPet:
        name: "InfoPet"


<Login>:
    canvas.before:
        Color: 
            rgba: 255/255, 100/255, 194/255, 1
        Rectangle:
            pos: self.pos
            size: self.size  

        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: (0, self.height * 0.85)
            size: (self.width, self.height* 0.3)

        
    FloatLayout:
        Button:
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: 255/255, 100/255, 194/255, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  
        Image:
            id: logo
            source: "Imagens/Logo_Lassy.png" 
            size: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

    BoxLayout:
        padding: ('50dp', '150dp', '50dp', '50dp')
        spacing: '10dp'
        orientation: 'vertical'
        size_hint: (0.9, 0.6)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}

        TextInput:
            id: email
            hint_text: 'Email'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20] 

        TextInput:
            id: senha
            hint_text: 'Senha'
            password: True
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.2)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  

        Button:
            text: 'Cadastrar'
            color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            on_press: root.cadastro()
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  

        Button:
            text: 'Login'
            on_press: app.root.current = "Cadastro"
            color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            size_hint_y: None
            height: '50dp'  
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.3)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  

<Cadastro>:
