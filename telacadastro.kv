<gerenciador>:
    Login:
        name: "Login"
    Cadastro:
        name: "Cadastro"
    Client:
        name: "Client"
    Pet:
        name: "Pet"
    Principal:
        name: "Principal"
    PastaPets:
        name: "PastaPets"
    InfoPet:
        name: "InfoPet"


<Login>:
    canvas.before:
        Color: 
            rgba: 255/255, 100/255, 194/255, 1 
        Rectangle:
            pos: self.pos
            size: self.size  

    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        TextInput:
            id: email
            hint_text: 'email'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            border: (5, 5, 5, 5)  
            canvas.after:
                Color:
                    rgba: (0.2, 0.6, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20] 
        TextInput:
            id: senha
            hint_text: 'Senha'

        Button:
            text: 'Cadastrar'
            on_press: root.butao()

        Button:
            text: 'Login'
            on_press: app.root.current = "Cadastro"

    FloatLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        Image:
            id: logo
            source: "Imagens/Logo_Lassy.png" 
            size_hint: (1, 1)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

<Cadastro>:
    canvas.before:
        Color: 
            rgba: 255/255, 100/255, 194/255, 1 
        Rectangle:
            pos: self.pos
            size: self.size       
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        TextInput:
            id: nome
            hint_text: 'Nome'
            foreground_color: (1, 1, 1, 1)
            background_color: (0, 0, 0, 0) 
            border: (5, 5, 5, 5)  
            canvas.after:
                Color:
                    rgba: (0.2, 0.6, 1, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20] 

        TextInput:
            id: email
            hint_text: 'email'

        TextInput:
            id: senha
            hint_text: 'Senha'

        TextInput:
            id: quant
            hint_text: 'Quantidade de dogs'
            input_filter: 'int'
            
        Button:
            text: 'Cadastrar'
            on_press: root.butao()

        Button:
            text: 'já cadastrados'
            on_press: app.root.current = "Principal"

    FloatLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        Image:
            id: logo
            source: "Imagens/Logo_Lassy.png" 
            size_hint: (0.2, 0.2)
            pos_hint: {"center_x": 0.5, "center_y": 0.9}

<Client>:
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'

        Label:
            id: label_status
            text: "Cadastro 1"

        TextInput:
            id: nome_pet
            hint_text: 'Nome do Pet'

        TextInput:
            id: Raca
            hint_text: 'Raça do Pet'

        TextInput:
            id: idade_pet
            hint_text: 'Idade do Pet'
            input_filter: 'int'

        Button:
            text: 'Cadastrar'
            on_press: root.cadastrar_pet()

<Pet>:
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        
        Label:
            id: nome_pet
            text: ""

        TextInput:
            id: pacote
            hint_text: 'é pacote'

        TextInput:
            id: Valor
            hint_text: 'Valor'

        TextInput:
            id: data
            hint_text: 'data'

        Button:
            text: 'Cadastrar'
            on_press: root.criar_dog()
        
<Principal>:
    BoxLayout:
        orientation: 'vertical' 
        ScrollView:
            GridLayout:
                id: lista_clients
                cols: 1
                size_hint_y: None
                height: self.minimum_height

<PastaPets>:
    BoxLayout:
        orientation: 'vertical' 
        ScrollView:
            GridLayout:
                id: lista_pets
                cols: 1
                size_hint_y: None
                height: self.minimum_height

<InfoPet>:
    BoxLayout:
        orientation: 'vertical' 
        Label:
            id: NomePet
            text: "teste"
            size_hint_y: None
            height: self.texture_size[1] + 10 
            padding: 10

        ScrollView:
            size_hint_y: 1  # Ocupa todo o espaço disponível
            do_scroll_x: False  # Impede rolagem horizontal
            GridLayout:            
                id: lista_pets
                cols: 5
                size_hint_y: None
                height: self.minimum_height
                padding: 10



