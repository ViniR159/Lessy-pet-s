<gerenciador>:
    Login:
        name: "login"
    Client:
        name: "Client"
    Principal:
        name: "Principal"
<Login>:

    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'
        
        TextInput:
            id: nome
            hint_text: 'nome'

        TextInput:
            id: email
            hint_text: 'email'

        TextInput:
            id: senha
            hint_text: 'Senha'

        TextInput:
            id: quant
            hint_text: 'Quantidade de dogs'
            input_filter: 'int'
            
        Button:
            text: 'Cadastrar'
            on_press: root.butao()

        Button:
            text: 'já cadastrados'

<Client>:
    BoxLayout:
        padding: ('100dp', '50dp', '100dp', '50dp')
        orientation: 'vertical'

        Label:
            id: label_status
            text: "Cadastro 1"

        TextInput:
            id: nome_pet
            hint_text: 'Nome do Pet'

        TextInput:
            id: Raca
            hint_text: 'Raça do Pet'

        TextInput:
            id: idade_pet
            hint_text: 'Idade do Pet'
            input_filter: 'int'

        Button:
            text: 'Cadastrar'
            on_press: root.cadastrar_pet()
        
<Principal>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text:'já cadastrado'
